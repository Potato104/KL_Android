                android:background="@drawable/border_rec"
                />

            <TextView
                android:text="@string/D_Block"
                android:padding="30dp"
                android:textAlignment="center"
                android:background="@drawable/border_rec"
                />

            <TextView
                android:text="@string/Lunch"
                android:padding="30dp"
                android:textAlignment="center"
                android:background="@drawable/border_rec"
                />

            <TextView
                android:text="@string/E_Block"
                android:padding="30dp"
                android:textAlignment="center"
                android:background="@drawable/border_rec"
                />

            <TextView
                android:text="@string/F_Block"
                android:padding="30dp"
                android:textAlignment="center"
                android:background="@drawable/border_rec"
                />

            <TextView
                android:text="@string/F_Block"
                android:padding="30dp"
                android:textAlignment="center"
                android:background="@drawable/border_rec"
                />

            <TextView
                android:text="@string/G_Block"
